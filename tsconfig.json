{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2016", // JavaScript version for emitted files
    "module": "commonjs", // Module system to use
    "jsx": "react-jsx", // Enable React JSX support
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Easier imports for CommonJS modules
    "forceConsistentCasingInFileNames": true, // Enforce case-sensitive imports
    "skipLibCheck": true, // Skip type checking for .d.ts files

    /* Optional Advanced Options */
    "typeRoots": ["node_modules/@types"], // Specify type definitions lookup folders
    "types": ["styled-components"] // Explicitly include styled-components types
  }
}
